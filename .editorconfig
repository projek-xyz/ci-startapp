# editorconfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[{app,tests}/**.php]
indent_size = 4

[{asset,public}/**.{less,css,js,json}]
indent_size = 2

[travis.yml]
indent_size = 2
